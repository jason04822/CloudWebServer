<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home</title>
    <link rel="stylesheet" href="/styles/main.css" />
</head>

<body>

<main id="home" class="page active">
    <div class="container">

        <div class="top-bar">
            <h1>Welcome, <%= user.username %></h1>
            <a href="/logout" class="logout-btn">Logout</a>
        </div>

        <div class="section glass">
            <h2 class="books-title">Books</h2>

            <div class="add-book-bar">
                <form method="POST" action="/books/add" class="add-book-form">
                    <input type="text" name="title" placeholder="Book title" required>
                    <input type="text" name="isbn" placeholder="ISBN" required>
                    <button type="submit">Add</button>
                </form>
            </div>

            <table>
                <tr>
                    <th>Title</th>
                    <th>ISBN</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>

                <% books.forEach(book => { %>
                <tr>
                    <td><%= book.title %></td>
                    <td><%= book.isbn %></td>

                    <td>
                        <% if (book.available) { %>
                            Available
                        <% } else { %>
                            Borrowed <br>
                            <small>by <%= book.borrowedBy %></small>
                        <% } %>
                    </td>

                    <td>
                        <% if (book.available) { %>
                            <form method="POST" action="/borrow/book" style="display:inline;">
                                <input type="hidden" name="bookId" value="<%= book._id %>">
                                <input type="hidden" name="borrowerEmail" value="<%= user.email %>">
                                <button type="submit">Borrow</button>
                            </form>
                        <% } %>
                    </td>
                </tr>
                <% }); %>
            </table>
        </div>

        <div class="section glass">
            <h2 class="borrowers-title">Borrowers</h2>

            <table>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Borrowed Books</th>
                    <th>Add Borrow</th>
                </tr>

                <% borrowers.forEach(b => { %>
                <tr>
                    <td><%= b.name %></td>
                    <td><%= b.email %></td>

                    <td>
                        <% if (b.borrowedBooks && b.borrowedBooks.length > 0) { %>
                            <ul>
                                <% b.borrowedBooks.forEach(bb => { %>
                                    <li>
                                        <%= bb.bookTitle %>
                                        (on <%= new Date(bb.borrowDate).toDateString() %>)
                                        <a href="/books/edit/<%= bb.bookId %>">Edit</a>

                                        <form method="POST"
                                              action="/books/delete"
                                              style="display:inline;"
                                              onsubmit="return confirm('Delete this book?');">
                                            <input type="hidden" name="bookId" value="<%= bb.bookId %>">
                                            <button type="submit">Delete</button>
                                        </form>
                                    </li>
                                <% }); %>
                            </ul>
                        <% } else { %>
                            None
                        <% } %>
                    </td>

                    <td>
                        <form method="POST" action="/borrow/fromBorrowers">
                            <input type="hidden" name="borrowerEmail" value="<%= b.email %>">

                            <select name="bookId" required>
                                <option value="">Select bookâ€¦</option>
                                <% books.forEach(book => { %>
                                    <% if (book.available) { %>
                                        <option value="<%= book._id %>"><%= book.title %></option>
                                    <% } %>
                                <% }); %>
                            </select>

                            <button type="submit">Add</button>
                        </form>
                    </td>
                </tr>
                <% }); %>

            </table>
        </div>

    </div>
</main>

</body>
</html>
